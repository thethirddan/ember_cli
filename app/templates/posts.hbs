<h1>Posts</h1>

<ul class="list-unstyled">
  {{#each model as |post|}}
    <li>
      {{#link-to 'post' post}}
      {{post.title}}
      <span class="muted">
        by {{post.author.name}}
      </span>
      {{/link-to}}
    </li>
  {{else}}
    <li>Sorry, no posts are here...</li>
  {{/each}}
</ul>
